@model RLBW_ERP.Models.FinanceModels.TransactionDistribution

<h4>Distribuir Transação</h4>
<div >
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Transaction.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Transaction.Date)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Transaction.IsExpense)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Transaction.IsExpense)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Transaction.IsIncurred)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Transaction.IsIncurred)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Transaction.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Transaction.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Transaction.Value)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Transaction.Value)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Transaction.Document)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Transaction.Document)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Transaction.Notes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Transaction.Notes)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Transaction.BankTransactionId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Transaction.BankTransactionId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Transaction.StatementLine)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Transaction.StatementLine)
        </dd>
        @if (Model.Transaction.BudgetId != null)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Transaction.BudgetId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Transaction.Budget.Year)
            </dd>
        }
    </dl>
    <form asp-action="CreateByTransaction" asp-controller="TransactionDistributions" class="myForm" method="post">
        <h5>Distribuir Transações para o Centro de Custo @Model.CostCenterId</h5>
        <div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TransactionId" />
            <hr />
            <div class="form-group">
                <label asp-for="CostCenterId" class="control-label"></label>
                <select asp-for="CostCenterId" id="type" class="form-control" asp-items="@ViewBag.CostCenterId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Proportion" class="control-label"></label>
                <input asp-for="Proportion" class="form-control" type="number" step="any" />
                <span asp-validation-for="Proportion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notes" class="control-label"></label>
                <input asp-for="Notes" class="form-control" />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="form-group col">
                <input type="submit" value="Salvar" class="btn btn-sm btn-outline-secondary" />
                <button type="button" class="btn btn-sm btn-outline-secondary" data-dismiss="modal">Fechar</button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
