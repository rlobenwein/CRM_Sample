@model RLBW_ERP.Models.SalesModels.OptionalsPackage

<div class="container">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form asp-action="Edit" class="myForm" method="post">
                <div class="modal-header">
                    <input type="hidden" asp-for="SubproductsListId" />
                    <input type="hidden" asp-for="OptionalId" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <h5>Opcionais:</h5>
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
                    <hr />
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label asp-for="OptionalId" class="control-label"></label>
                        <select asp-for="OptionalId" class="form-control OptionalId" asp-items="ViewBag.OptionalId"></select>
                        <span asp-validation-for="OptionalId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Quantity" class="control-label"></label>
                        <input asp-for="Quantity" class="form-control" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="BasePrice" class="control-label"></label>
                        <input asp-for="BasePrice" class="form-control" readonly />
                        <span asp-validation-for="BasePrice" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Discount" class="control-label"></label>
                        <input asp-for="Discount" class="form-control" />
                        <span asp-validation-for="Discount" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price" class="control-label"></label>
                        <input asp-for="Price" class="form-control" readonly />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="modal-footer">
                        <div class="form-group">
                            <input type="submit" value="Salvar" class="btn btn-sm btn-outline-secondary" />
                            <a class="btn btn-sm btn-outline-secondary SubproductListItemDetails" data-bs-target="#modal" data-SubproductListId=@Model.SubproductsListId>Voltar</a>
                            <button type="button" class="btn btn-sm btn-outline-secondary" data-dismiss="modal">Fechar</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
