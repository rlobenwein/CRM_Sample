@model RLBW_ERP.Models.ViewModels.BudgetIndexViewModel

@{
    ViewData["Title"] = "Detalhes";
}

<div>
    <h4>Orçamento @Model.Year</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalBudget)
        </dt>
        <dd class="col-sm-10">
            @string.Format(System.Globalization.CultureInfo.CreateSpecificCulture("pt-BR"), "{0:N2}", Model.TotalBudget)
        </dd>
    </dl>
</div>
<hr />
<div>
    <h4>
        Despesas previstas
        <a class="btn btn-sm btn-outline-secondary" asp-action="Create" asp-route-year="@Model.Year">Inserir</a>
        <a class="btn btn-sm btn-outline-secondary" asp-action="Index">Voltar para a lista</a>
    </h4>
    <div>
    </div>

    <div>
        <table class="table">
            <thead>
                <tr>
                    <th>Descrição</th>
                    <th>Categoria</th>
                    <th>Subcategoria</th>
                    <th>Tipo</th>
                    <th>Valor por período</th>
                    <th>Periodicidade</th>
                    <th>Total</th>
                    <th>Dia</th>
                    <th>Mês Inicial</th>
                    <th>Transações cadastradas</th>
                    <th>Opções</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model.BudgetItems)
                {
                    <tr>
                        <td>
                            @item.Description
                        </td>
                        <td>
                            @item.TransactionType.Subcategory.Category.Name
                        </td>
                        <td>
                            @item.TransactionType.Subcategory.Name
                        </td>
                        <td>
                            @item.TransactionType.Name
                        </td>
                        <td>
                            @string.Format(System.Globalization.CultureInfo.CreateSpecificCulture("pt-BR"), "{0:N2}", item.TotalBudgeted)

                        </td>
                        <td>
                            @item.Frequency
                        </td>
                        <td>
                            @string.Format(System.Globalization.CultureInfo.CreateSpecificCulture("pt-BR"), "{0:N2}", item.TotalAmount)

                        </td>
                        <td>
                            @item.TransactionDay
                        </td>
                        <td>
                            @item.InitialMonth
                        </td>
                        <td>
                            @item.Transactions.Count
                            @if (item.Transactions.Count == item.Frequency && item.Transactions.Sum(x => x.Value) == item.TotalAmount)
                            {
                                <button class="btn btn-sm btn-outline-success" disabled>Ok</button>
                            }
                            else
                            {
                                <button class="btn btn-sm btn-outline-danger" onclick="updateTransactions(@item.Id)">Atualizar</button>
                            }
                        </td>
                        <td>
                            <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                            <a class="btn btn-sm btn-outline-secondary" asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div>
    <a class="btn btn-sm btn-outline-secondary" asp-action="Create" asp-route-year="@Model.Year">Inserir</a>
    <a class="btn btn-sm btn-outline-secondary" asp-action="Index">Voltar para a lista</a>
</div>
@section Scripts {
    <script>
        function updateTransactions(id) {
            $.ajax({
                type: "POST",
                url: "/Budgets/UpdateTransactionsByBudgetId", 
                data: { id: id },
                success: function (data) {
                    location.reload();
                    console.log('ok');
                },
                error: function (error) {
                    console.error(error);
                }
            });
        }</script>
}
