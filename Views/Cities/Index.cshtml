@model IEnumerable<CRM_Sample.Models.LocationModels.City>

@{
    ViewData["Title"] = "Cidades";
}

<h4>Cidades do Estado/Província @ViewData["SelectedState"]</h4>

<p>
    <a class="btn btn-sm btn-outline-secondary"  asp-action="Create">Incluir Cidade</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a class="btn btn-sm btn-outline-secondary"  asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a class="btn btn-sm btn-outline-secondary"  asp-action="Details" asp-route-id="@item.Id">Empresas nesta cidade</a> |
            </td>
        </tr>
}
    </tbody>
</table>
