@model CRM_Sample.Models.LocationModels.Country

@{
    ViewData["Title"] = "Editar país";
}

<h4>Editar @Model.Name</h4>
<hr />
<form asp-action="Edit">
    <div class="row input-group mb-3">
        <div class="col-6 col-md-4 input-group mb-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="input-group mb-3">
                <span class="input-group-text"> @Html.DisplayNameFor(modelItem => Model.Name)</span>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="input-group mb-3">
                <span class="input-group-text"> @Html.DisplayNameFor(modelItem => Model.Iso3)</span>
                <input asp-for="Iso3" class="form-control" />
                <span asp-validation-for="Iso3" class="text-danger"></span>
            </div>
            <div class="input-group mb-3">
                <span class="input-group-text"> @Html.DisplayNameFor(modelItem => Model.PhoneCode)</span>
                <input asp-for="PhoneCode" class="form-control" />
                <span asp-validation-for="PhoneCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-sm btn-outline-secondary" />
                <a asp-action="Index" class="btn btn-sm btn-outline-secondary">Voltar</a>
            </div>
        </div>
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
