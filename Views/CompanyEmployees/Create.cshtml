@model RLBW_ERP.Models.CustomerModels.CompanyEmployee

@{
    ViewData["Title"] = "Adicionar Contato";
}

<h4>Adicionar contato à empresa @ViewData["FriendlyName"]</h4>
<hr />
<form asp-action="Create">
    <div class="row input-group mb-3">
        <div class="col-6 col-md-4  mb-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="input-group mb-3">
                <span class="input-group-text"> @Html.DisplayNameFor(modelItem => Model.CompanyId)</span>
                <select asp-for="CompanyId" class="form-control" asp-items="@ViewBag.CompanyId">
                    <option value=0>Selecione</option>
                </select>
                <span asp-validation-for="CompanyId" class="text-danger"></span>
            </div>
            <div class="input-group mb-3">
                <span class="input-group-text"> @Html.DisplayNameFor(modelItem => Model.PersonId)</span>
                <select asp-for="PersonId" class="form-control" asp-items="@ViewBag.PersonId">
                    <option value=0>Selecione</option>
                </select>
                <span asp-validation-for="PersonId" class="text-danger"></span>
            </div>
            <div class="input-group mb-3">
                <span class="input-group-text"> @Html.DisplayNameFor(modelItem => Model.Position)</span>
                <input asp-for="Position" class="form-control" />
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>
            <div class="input-group mb-3">
                <span class="input-group-text"> @Html.DisplayNameFor(modelItem => Model.Department)</span>
                <input asp-for="Department" class="form-control" />
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>
        </div>
        <div class="col-6 col-md-4  mb-3">
            <div class="input-group mb-3">
                <span class="input-group-text"> @Html.DisplayNameFor(modelItem => Model.InitialDate)</span>
                <input asp-for="InitialDate" class="form-control" />
                <span asp-validation-for="InitialDate" class="text-danger"></span>
            </div>
            <div class="input-group mb-3">
                <span class="input-group-text"> @Html.DisplayNameFor(modelItem => Model.EndDate)</span>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
        </div>
        <div class="col-6 col-md-4  mb-3">
            <div class="input-group mb-3">
                <span class="input-group-text"> @Html.DisplayNameFor(modelItem => Model.CellPhone)</span>
                <input asp-for="CellPhone" class="form-control">
                <span asp-validation-for="CellPhone" class="text-danger"></span>
            </div>
            <div class="input-group mb-3">
                <span class="input-group-text"> @Html.DisplayNameFor(modelItem => Model.WorkPhone)</span>
                <input asp-for="WorkPhone" class="form-control">
                <span asp-validation-for="WorkPhone" class="text-danger"></span>
            </div>
            <div class="input-group mb-3">
                <span class="input-group-text"> @Html.DisplayNameFor(modelItem => Model.WorkEmail)</span>
                <input asp-for="WorkEmail" class="form-control">
                <span asp-validation-for="WorkEmail" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row input-group mb-3">
        <div class="input-group mb-3">
            <div class="input-group mb-3">
                <span class="input-group-text"> @Html.DisplayNameFor(modelItem => Model.Notes)</span>
                <input asp-for="Notes" class="form-control" />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <input class="form-check-input" asp-for="Status" /> @Html.DisplayNameFor(model => model.Status)
            </div>
            <div class="input-group mb-3">
                <input type="submit" value="Salvar" class="btn btn-outline-secondary" />
                <a href='javascript:history.go(-1)' class="btn btn-outline-secondary">Voltar</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
